---
import NextJS from "@/icons/NextJS.astro";
import ReactJS from "@/icons/ReactJS.astro";
import Tailwind from "@/icons/Tailwind.astro";
import CSS from "@/icons/CSS.astro";
import Mongo from "@/icons/Mongo.astro";
import Svelte from "@/icons/Svelte.astro";
import { getI18N } from "@/i18n";
import ProjectCard from "./ProjectCard.astro";

const TAGS = {
  CSS: {
    name: "CSS",
    class: "bg-[#073d65] text-white",
    icon: CSS,
  },
  REACT: {
    name: "React.js",
    class: "bg-[#016f89] text-white",
    icon: ReactJS,
  },
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  SVELTE: {
    name: "Svelte",
    class: "bg-[#cc3100] text-white",
    icon: Svelte,
  },
  MONGO: {
    name: "MongoDB",
    class: "bg-[#02793b] text-white",
    icon: Mongo,
  },
};

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const PROJECTS = [
  {
    ...i18n.PROJECTS[0],
    color: "text-stone-600 dark:text-stone-400",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.MONGO],
  },
  {
    ...i18n.PROJECTS[1],
    color: "text-amber-600",
    tags: [TAGS.CSS, TAGS.SVELTE],
  },
  {
    ...i18n.PROJECTS[2],
    color: "text-[#940740]",
    tags: [TAGS.CSS, TAGS.REACT],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(
      ({ title, color, subtitle, description, link, github, image, tags }) => (
        <ProjectCard
          title={title}
          color={color}
          subtitle={subtitle}
          description={description}
          link={link}
          github={github}
          image={image}
          tags={tags}
        />
      ),
    )
  }
</div>
