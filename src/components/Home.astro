---
import GitHub from "@/icons/GitHub.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import Mail from "@/icons/Mail.astro";
import Badge from "./Badge.astro";
import SocialPill from "./SocialPill.astro";
import Image from "astro/components/Image.astro";
import Sparkles from "@/icons/Sparkles.astro";
---

<div
  class="flex flex-col lg:flex-row lg:items-center lg:justify-center gap-x-12"
>
  <a
    href="https://www.linkedin.com/in/ebregains/"
    target="_blank"
    rel="noopener"
    class="flex lg:flex-col lg:flex-1 gap-4 mb-4 lg:mb-0 items-center w-auto md:hover:scale-105 transition"
  >
    <div
      class="absolute ml-28 lg:mt-3 lg:ml-40 flex items-center md:justify-center md:hover:scale-105 transition"
    >
      <Badge>
        <Sparkles class="mr-2 size-4" />Disponible!
      </Badge>
    </div>
    <Image
      src="https://github.com/ebregains.png"
      class="rounded-full size-32 lg:size-64 lg:shadow-lg hover:shadow-2xl dark:shadow-white/10"
      alt="emi logo"
      width={300}
      height={300}
      loading={"eager"}
    />
  </a>
  <div class="w-full lg:w-3/5">
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-1 flex gap-x-4">
      Emiliano Brégains
    </h1>
    <h2
      class="mb-4 text-xl font-semibold text-yellow-500 md:text-2xl lg:text-3xl lg:mb-5 dark:text-yellow-300"
    >
      Desarrollador Fullstack
      <!-- <span class="text-yellow-300/70"> y más.</span> -->
    </h2>
    <h3 class="text-base text-balance mb-6 max-w-[700px]">
      <span>Trabajando en el rubro desde hace +2 años.</span>
      <span class="text-blue-600 dark:text-blue-300/90">
        De Santa Fe, Argentina.</span
      >
      <span class="opacity-80">
        Dedicado a crear productos y experiencias especiales para cada uno de
        mis clientes.</span
      >
    </h3>

    <nav class="flex gap-4 flex-wrap">
      <SocialPill href="https://www.linkedin.com/in/ebregains/">
        <LinkedIn class="size-4 md:size-5 lg:size-6" />
        LinkedIn
      </SocialPill>

      <SocialPill href="https://github.com/EBregains">
        <GitHub class="size-4 md:size-5 lg:size-6" />
        GitHub
      </SocialPill>

      <SocialPill href="mailto:ebregains@gmail.com">
        <Mail class="size-4 md:size-5 lg:size-6" />
        @ebregains
      </SocialPill>
    </nav>
  </div>
</div>
