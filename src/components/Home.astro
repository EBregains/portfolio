<style is:global>
  .guitar-mask {
  }
  @media (min-width: 1024px) {
    .guitar-mask {
      aspect-ratio: 3/4;
      object-fit: cover;
      mask-image: url(/masks/guitar.png);
      -webkit-mask-image: url(/masks/guitar.png);
      mask-repeat: no-repeat;
      mask-size: contain;
    }
  }

  .word-spacing {
    word-spacing: -2px;
  }

  .expand-ttr {
    animation: ttr 1s cubic-bezier(0.075, 0.82, 0.165, 1) 1s forwards;
  }

  .expand-tbl {
    animation: tbl 1s cubic-bezier(0.075, 0.82, 0.165, 1) 1s forwards;
  }
  .expand-tbr {
    animation: tbr 1s cubic-bezier(0.075, 0.82, 0.165, 1) 1s forwards;
  }

  .appear {
    animation: appear 0.5s linear forwards 1.5s;
  }

  @keyframes appear {
    to {
      opacity: 1;
    }
  }
  @keyframes ttr {
    to {
      left: 100%;
      transform: rotate(90deg);
    }
  }

  @keyframes tbl {
    to {
      top: 100%;
      transform: rotate(-90deg);
    }
  }

  @keyframes tbr {
    to {
      top: 100%;
      left: 100%;
      transform: rotate(-180deg);
    }
  }
</style>
