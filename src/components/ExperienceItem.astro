---
interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
  active?: boolean;
}
const { title, description, link, company, date, active } = Astro.props;
---

<div
  class={`absolute w-3 h-3 rounded-full mt-7 -start-[0.43rem] 
  ${active ? "bg-yellow-500 dark:bg-yellow-300/90" : " border-2 bg-white border-black dark:bg-black dark:border-white"}`}
>
</div>
<div class="flex flex-col lg:flex-row gap-y-4">
  <div class="flex-1 lg:mt-3">
    <h3
      class="text-xl lg:text-2xl font-semibold text-yellow-500 dark:text-yellow-300/90"
    >
      {title}
    </h3>
    <h4
      class="text-lg lg:text-xl text-pretty font-medium text-black/90 dark:text-gray-300"
    >
      {company}
    </h4>
    <time class="ext-normal font-normal text-black/60 dark:text-gray-400">
      {date}
    </time>
  </div>
  <div class="flex-1">
    <p
      class="mb-2 text-base font-normal text-black/90 dark:text-gray-300 text-pretty"
    >
      {description}
    </p>
    {
      link && (
        <a
          href={link}
          class="inline-flex items-center px-2 py-1 text-sm border-gray-600 dark:text-white transition bg-white/5 border border-white/20 focus-visible:ring-yellow-500/80 text-md hover:bg-gray-800 hover:border-gray-900 group max-w-fit rounded-xl hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black"
        >
          Saber mas
          <svg
            class="w-3 h-3 ms-2 rtl:rotate-180"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 10"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 5h12m0 0L9 1m4 4L9 9"
            />
          </svg>
        </a>
      )
    }
  </div>
</div>
